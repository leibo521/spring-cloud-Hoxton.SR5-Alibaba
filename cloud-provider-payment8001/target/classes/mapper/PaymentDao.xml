<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.dao.PaymentDao">
    <!--结果的映射配置-->
    <resultMap id="BaseResultMap" type="com.study.entities.Payment">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="serial" jdbcType="VARCHAR" property="serial" />
    </resultMap>
    <!--使用自动生成主键的策略,指定主键为id字段-->
    <insert id="create" parameterType="com.study.entities.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(`serial`) values (#{serial});
    </insert>
    <select id="getPaymentById" parameterType="long" resultMap="BaseResultMap" resultType="com.study.entities.Payment">
        select * from `payment` where `id` = #{id};
    </select>


</mapper>